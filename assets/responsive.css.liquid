/* ************************************* 1200px  ************************************* */

@media (min-width: 1200px) {



}



/* ************************************* < 1200px ************************************* */

@media (max-width: 1200px) {

/* HEADER */
#logo {padding: 75px 0 0 0;}

.header_search {margin: 10px 0 0 0;}



.breadcrumb {margin: 15px 0 25px 0;border-top: 1px solid {{ settings.border_color }};}



/* SHOWCASE */
.custom_showcase a h3 {min-height: 1px;padding: 14px 0 8px 0;font-size: 20px;}



/* BOTTOM */
.custom_bottom a h3 {min-height: 1px;padding: 14px 0 8px 0;font-size: 20px;}



/* SIDEBAR PRODUCTS LISTING */
.column .product {}

.column .product .product_img {}
.column .product .product_img a {margin: 0 auto;float: none;}

.column .product .product_info {margin: 15px 0 0 0;}




.product_wrap #bx-pager a {width: 84px;}

}



/* ************************************* < 980px ************************************* */

@media (max-width: 992px) {

/* SHOWCASE */
.custom_showcase a h3 {min-height: 1px;padding: 8px 0 4px 0;font-size: 18px;}



/* BOTTOM */
.custom_bottom a h3 {min-height: 1px;padding: 8px 0 4px 0;font-size: 18px;}



.product_wrap #bx-pager a {width: 61px;}

}



/* ************************************* < 767px ************************************* */

@media (max-width: 767px) {

.container {padding:0 15px;}

.column_left,
.column_right,
.column_center,
#main_content {margin-left: 0 !important;margin-right: 0 !important;}



/* HEADER */
#header {padding: 0 0 41px 0;}

#logo {padding: 30px 0 0 0;text-align: center;}

ul.header_user {float: left;}

.header_cart {float: none;}
.header_cart a {width: 100%;}

.header_search {width: 100%;float: none;}

#navigation .container {margin-left: 15px;margin-right: 15px;padding: 0;}



/* SHOWCASE */
.custom_showcase {margin: 30px 0 0 0;}
.custom_showcase a h3 {font-size: 15px;}



/* BOTTOM */
#bottom {padding: 0;}

.custom_bottom {margin: 30px 0 0 0;}
.custom_bottom a h3 {font-size: 15px;}



/* MAIN PRODUCT LISTING */
#main_content .product {margin-top: 25px;}
#main_content .product > div {overflow: hidden;}

#main_content .product .product_img {width: 120px;float: left;}

#main_content .product .product_name {padding: 0;position: relative;top: -3px;}

#main_content .product .product_info {margin: 0 0 0 135px;}

#main_content .product .product_price {}
#main_content .product .product_price .money {}
#main_content .product .product_price .compare-at-price {}

#main_content .product form {}



/* SIDEBAR PRODUCTS LISTING */
.column .product {}

.column .product .product_img {}
.column .product .product_img a {margin: 0;float: left;}

.column .product .product_info {margin: 0 0 0 125px;}



/* FOOTER */
#footer {margin: 30px 0 0 0;}
.custom_footer h3 {padding: 25px 0 0 0;}
#footer .copyright {text-align: center;}


.product_wrap .product_name {margin: 0;padding: 30px 0 0 0;}



.cart_buttons {text-align: center;}
.cart_buttons span.or {display: block;margin: 5px 0;}


}



